<h1>Current Assignments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th width="200">Title</th>
      <th>Description</th>
      <th width="150">Date</th>
      <th width="150">Due</th>
    </tr>
  </thead>

  <tbody>
    <% @aassignments.each do |aassignment| %>
      <tr>
        <td><%= aassignment.title %></td>
        <td><%= aassignment.description %></td>
        <td><%= aassignment.date %></td>
        <td><%= aassignment.due %></td>
        <td><%= link_to 'Show', aassignment %></td>
        <td><%= link_to 'Edit', edit_aassignment_path(aassignment) %></td>
        <td><%= link_to 'Destroy', aassignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

